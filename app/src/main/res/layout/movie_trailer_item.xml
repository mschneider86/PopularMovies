<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardViewTrailer">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/movie_video_thumbnail"
        tools:src="@color/colorBlack"
        style="@style/TrailerThumbnail"/>

    <ImageView
        style="@style/PlayImageView"/>

    <TextView
        android:id="@+id/tv_trailer_title"
        android:layout_below="@+id/movie_video_thumbnail"
        style="@style/TrailerTitle"/>

</RelativeLayout>
    </android.support.v7.widget.CardView>